generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(uuid())
  email          String         @unique
  password       String
  username       String
  profilePicture String?
  artist         Artist?        @relation("UserArtist")
  comments       Comment[]
  followers      Follower[]
  notifications  Notification[]
}

model Artist {
  id            String          @id @default(uuid())
  userId        String          @unique
  collections   ArtCollection[]
  user          User            @relation("UserArtist", fields: [userId], references: [id])
  arts          Art[]
  feed          Feed[]
  followers     Follower[]
  notifications Notification[]
}

model Follower {
  id       String @id @default(uuid())
  userId   String
  artistId String
  artist   Artist @relation(fields: [artistId], references: [id])
  user     User   @relation(fields: [userId], references: [id])
}

model Art {
  id          String          @id @default(uuid())
  imageUrl    String
  description String
  datePosted  DateTime        @default(now())
  artistId    String
  collections ArtCollection[]
  tags        ArtToArtTag[]
  artist      Artist          @relation(fields: [artistId], references: [id])
  comments    Comment[]
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  userId    String
  artId     String
  art       Art      @relation(fields: [artId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model ArtTag {
  id      String        @id @default(uuid())
  tagName String
  arts    ArtToArtTag[]
}

model ArtCollection {
  id             String   @id @default(uuid())
  collectionName String
  createdAt      DateTime @default(now())
  artistId       String
  artId          String
  art            Art      @relation(fields: [artId], references: [id])
  artist         Artist   @relation(fields: [artistId], references: [id])
}

model Feed {
  id         String   @id @default(uuid())
  artistId   String
  title      String
  content    String
  datePosted DateTime @default(now())
  artist     Artist   @relation(fields: [artistId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  artistId  String?
  content   String
  createdAt DateTime @default(now())
  artist    Artist?  @relation(fields: [artistId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model ArtToArtTag {
  artId String
  tagId String
  art   Art    @relation(fields: [artId], references: [id])
  tag   ArtTag @relation(fields: [tagId], references: [id])

  @@id([artId, tagId])
}
