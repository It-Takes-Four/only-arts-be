model User {
  id             String   @id @default(uuid())
  email          String   @unique
  password       String
  name           String
  profilePicture String?
  arts           Art[]
  comments       Comment[]

  @@map("users")
}

model Art {
  id          String    @id @default(uuid())
  imageUrl    String
  datePosted  DateTime  @default(now())
  description String
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  comments    Comment[]

  @@map("arts")
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  userId    String
  artId     String
  user      User     @relation(fields: [userId], references: [id])
  art       Art      @relation(fields: [artId], references: [id])

  @@map("comments")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
